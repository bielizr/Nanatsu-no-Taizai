@model Nanatsu_no_Taizai.ViewModels.HomeVM
			@{
				ViewData["Title"] = "Home";
				
			}

			<div class="pt-5 container">
				<div class="row">
					<div class="col mx-auto text-center">
						<h1 class="display-4 text-white">Sete Pecados Capitais</h1>
						<div class="my-3">
							<button id="btn-all" class="btn btn-md my-2 text-white bg-secondary btn-filter" onclick="filter('')">
								Ver Todos
							</button>

							@foreach (var tipo in Model.Raças)
							{
								<button id="btn-@tipo.Nome" class="btn btn-sm my-2 text-white btn-filter"
									style="" onclick="filter('@tipo.Nome')">@tipo.Nome</button>
							}
						</div>
					</div>
				</div>

				<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">

					@foreach (var personagem in Model.Personagems)
					{
						<!-- Card Pokemon - Inicio -->
						<div class="col poke @string.Join(' ', personagem.Raca.Nome))">
							<a asp-action="Details" asp-route-id="@personagem.Id" class="text-decoration-none">
								<div class="card">
									<img src="@personagem.Imagem" class="card-img-top" alt="@personagem.Nome" />
									<div class="card-body">
										<h5 class="card-text mb-1 text-white">Nº @personagem.Id.ToString("000")</h5>
										<h3 class="card-title text-dark">@personagem.Nome</h3>
										<div class="d-flex justify-content-between align-items-center">
											<div class="d-flex gap-2 my-2">
													<a href="#" class="btn text-white"
														style=>@personagem.Raca.Nome</a>
												
											</div>
										</div>
									</div>
								</div>
							</a>
						</div>
						<!-- Card Pokemon - Fim -->
					}
				</div>
				<div id="zeroPokemon" class="col-lg-12 text-center d-none mt-5" style="height: 350px;">
					<h1 class="my-3 text-danger">Nenhum Personagem Encontrado</h1>
				</div>
			</div>

			@section Scripts {
				<script src="~/js/site.js"></script>
			}	